<Application x:Class="Calculadora_Area_Perimetro_U1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Calculadora_Area_Perimetro_U1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Window" x:Key="ventana">
            <Setter Property="Background" Value="#77B9DD"></Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="encabezado">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="#0281c6"></Setter>
            <Setter Property="FontSize" Value="30"></Setter>
            <Setter Property="Padding" Value="10"></Setter>
        </Style>
    </Application.Resources>
</Application>
