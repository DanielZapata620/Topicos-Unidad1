<Window x:Class="Calculadora_Area_Perimetro_U1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora_Area_Perimetro_U1"
        mc:Ignorable="d"
        Title="Calculadora de áreas y perímetros" Height="450" Width="800" Background="#77b9dd">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Background="#0281c6" Foreground="White" FontSize="30" FontFamily="Verdana" Padding="10" >Seleccione una figura</TextBlock>
        <UniformGrid Margin="5">
            <Button Margin="5" Background="#00293F" Click="Button_Click" >
                <Image Source="Cuadradoo.png"></Image>
            </Button>
            <Button Margin="5" Background="#00293F" Click="BtnRectangulo_Click">
                <Image Source="Rectangulo.png"></Image>
            </Button>
            <Button Margin="5" Background="#00293F" Click="BtnCirculo_Click">
                <Image Source="Circulo.png"></Image>
            </Button>
            <Button Margin="5" Background="#00293F" Click="BtnTriangulo_Click">
                <Image Source="Triangulo.png"></Image>
            </Button>
            
        </UniformGrid>

    </DockPanel>
</Window>
